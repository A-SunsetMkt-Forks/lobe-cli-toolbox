{
  "extends": "@sindresorhus/tsconfig",
  "include": ["src", "*.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "include": ["src"],
    "outDir": "dist"
  }
}
