{
  "name": "commit-cli",
  "version": "1.11.0",
  "private": true,
  "homepage": "https://github.com/lobehub/commit-cli",
  "bugs": {
    "url": "https://github.com/lobehub/commit-cli/issues/new"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lobehub/commit-cli.git"
  },
  "license": "MIT",
  "author": "canisminor1990 <i@canisminor.cc>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel",
    "dev:commit": "npm run dev --prefix=packages/lobe-commit",
    "lint": "eslint \"{src,packages}/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:md": "remark . --quiet --output",
    "prepare": "husky install",
    "prettier": "prettier -c --write \"**/**\"",
    "release": "semantic-release",
    "test": "lerna run test --parallel && npm run lint"
  },
  "lint-staged": {
    "*.md": [
      "remark --quiet --output --",
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.json": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{js,jsx,cjs,mjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{ts,tsx}": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@lobehub/lint": "latest",
    "@sindresorhus/tsconfig": "^3",
    "@types/lodash-es": "^4",
    "@types/node": "^20",
    "@types/pangu": "^4",
    "@types/react": "^18",
    "@umijs/lint": "^4",
    "clean-pkg-json": "^1",
    "eslint": "^8",
    "husky": "^8",
    "lerna": "^4",
    "lint-staged": "^13",
    "pkgroll": "^1",
    "prettier": "^3",
    "remark": "^14",
    "remark-cli": "^11",
    "semantic-release": "^21",
    "stylelint": "latest",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
