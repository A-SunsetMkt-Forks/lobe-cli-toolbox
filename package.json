{
  "name": "lobe-commit",
  "version": "1.0.0",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/canisminor1990/lobe-commit.git"
  },
  "author": "canisminor1990 <i@canisminor.cc>",
  "files": [
    "dist"
  ],
  "bin": "dist/cli.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node ./dist/cli.js",
    "dev": "pkgroll --watch",
    "build": "pkgroll --minify && node ./scripts/addShebangs.cjs",
    "lint": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx,.cjs",
    "prepare": "husky install",
    "prettier": "prettier -c --write \"**/**\"",
    "release": "semantic-release",
    "test": "npm run lint",
    "type-check": "tsc -p tsconfig-check.json"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{js,jsx,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@inkjs/ui": "^1",
    "@types/react": "^18",
    "chalk": "^5",
    "cliui": "^8",
    "conf": "^11",
    "execa": "^7",
    "gitconfig": "^2.0.8",
    "github-api": "^3.4.0",
    "ink": "^3",
    "ink-select-input": "^5",
    "isomorphic-fetch": "^3.0.0",
    "meow": "^12",
    "pangu": "^4",
    "path-exists": "^5",
    "polished": "^4",
    "react": "^18",
    "update-notifier": "^6",
    "zustand": "^4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17",
    "@sindresorhus/tsconfig": "^3",
    "@types/node": "^20",
    "@types/pangu": "^4.0.0",
    "@umijs/lint": "^4",
    "commitlint": "^17",
    "commitlint-config-gitmoji": "^2",
    "eslint": "^8",
    "eslint-import-resolver-alias": "^1",
    "eslint-import-resolver-typescript": "^3",
    "husky": "^8",
    "lint-staged": "^13",
    "pkgroll": "^1",
    "prettier": "^2",
    "prettier-plugin-organize-imports": "^3",
    "prettier-plugin-packagejson": "^2",
    "prop-types": "^15",
    "semantic-release": "^21",
    "semantic-release-config-gitmoji": "^1",
    "typescript": "^5"
  }
}
