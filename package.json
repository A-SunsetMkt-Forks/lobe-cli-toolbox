{
  "name": "@lobehub/commit-cli",
  "version": "0.0.0",
  "description": "Lobe Commit is a CLI tool that uses ChatGPT to generate Gitmoji-based commit messages",
  "keywords": [
    "ai",
    "git",
    "commit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/canisminor1990/lobe-commit.git"
  },
  "license": "MIT",
  "author": "canisminor1990 <i@canisminor.cc>",
  "type": "module",
  "bin": {
    "lobe": "dist/cli.js",
    "lobe-commit": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll --minify && node ./scripts/addShebangs.cjs",
    "dev": "pkgroll --watch",
    "lint": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx,.cjs",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "husky install",
    "prettier": "prettier -c --write \"**/**\"",
    "release": "semantic-release",
    "start": "node ./dist/cli.js",
    "test": "npm run lint",
    "type-check": "tsc -p tsconfig-check.json"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{js,jsx,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@inkjs/ui": "^1",
    "@types/pangu": "^4",
    "@types/react": "^18",
    "chalk": "^5",
    "chatgpt": "^5",
    "cliui": "^8",
    "conf": "^11",
    "execa": "^7",
    "gitconfig": "^2",
    "github-api": "^3",
    "ink": "^4",
    "ink-select-input": "^5",
    "meow": "^12",
    "pangu": "^4",
    "path-exists": "^5",
    "react": "^18",
    "update-notifier": "^6",
    "zustand": "^4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17",
    "@sindresorhus/tsconfig": "^3",
    "@types/node": "^20",
    "@umijs/lint": "^4",
    "clean-pkg-json": "^1",
    "commitlint": "^17",
    "commitlint-config-gitmoji": "^2",
    "eslint": "^8",
    "eslint-import-resolver-alias": "^1",
    "eslint-import-resolver-typescript": "^3",
    "husky": "^8",
    "lint-staged": "^13",
    "pkgroll": "^1",
    "prettier": "^2",
    "prettier-plugin-organize-imports": "^3",
    "prettier-plugin-packagejson": "^2",
    "semantic-release": "^21",
    "semantic-release-config-gitmoji": "^1",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
