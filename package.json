{
  "name": "@lobehub/commit-cli",
  "version": "1.7.3",
  "description": "Lobe Commit is a CLI tool that uses ChatGPT to generate Gitmoji-based commit messages",
  "keywords": [
    "ai",
    "git",
    "commit",
    "openai",
    "gpt",
    "gitmoji-cli",
    "git-commits",
    "chatgpt",
    "aicommit",
    "ai-commit"
  ],
  "homepage": "https://github.com/lobehub/lobe-commit",
  "bugs": {
    "url": "https://github.com/lobehub/lobe-commit/issues/new"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lobehub/lobe-commit.git"
  },
  "license": "MIT",
  "author": "canisminor1990 <i@canisminor.cc>",
  "sideEffects": false,
  "type": "module",
  "bin": {
    "lobe": "dist/cli.js",
    "lobe-commit": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run type-check && pkgroll --minify -p tsconfig.prod.json && node ./scripts/addShebangs.cjs",
    "dev": "pkgroll --watch",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:md": "remark . --quiet --output",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "husky install",
    "prettier": "prettier -c --write \"**/**\"",
    "release": "semantic-release",
    "start": "node ./dist/cli.js",
    "test": "npm run type-check && npm run lint",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.md": [
      "remark --quiet --output --",
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.json": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{js,jsx,cjs,mjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{ts,tsx}": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@inkjs/ui": "^1",
    "chalk": "^5",
    "cliui": "^8",
    "conf": "^11",
    "execa": "^7",
    "gitconfig": "^2",
    "github-api": "^3",
    "ink": "^4",
    "ink-select-input": "^5",
    "isomorphic-fetch": "^3",
    "langchain": "latest",
    "lodash-es": "^4",
    "meow": "^12",
    "pangu": "^4",
    "path-exists": "^5",
    "react": "^18",
    "update-notifier": "^6",
    "zustand": "^4"
  },
  "devDependencies": {
    "@lobehub/lint": "latest",
    "@sindresorhus/tsconfig": "^3",
    "@types/lodash-es": "^4",
    "@types/node": "^20",
    "@types/pangu": "^4",
    "@types/react": "^18",
    "@umijs/lint": "^4",
    "clean-pkg-json": "^1",
    "eslint": "^8",
    "husky": "^8",
    "lint-staged": "^13",
    "pkgroll": "^1",
    "prettier": "^2",
    "remark": "^14",
    "remark-cli": "^11",
    "semantic-release": "^21",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18",
    "react": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
